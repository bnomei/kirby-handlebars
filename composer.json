{
    "name": "bnomei/kirby3-handlebars",
    "type": "plugin",
    "version": "2.0.0",
    "license": "MIT",
    "description": "Kirby 3 Component for semantic templates with Handlebars and Mustache",
    "authors": [
        {
            "name": "Bruno Meilick",
            "email": "b@bnomei.com"
        }
    ],
    "keywords": [
        "kirby3",
        "kirby3-cms",
        "kirby3-plugin",
        "handlebars",
        "mustache",
        "cache",
        "component",
        "template-engine",
        "performance",
        "semantic",
        "logic-less"
    ],
    "suggest": {
    },
    "autoload": {
        "files": [
            "config.php"
        ],
        "psr-4": {
            "Bnomei\\": "classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/k-next/kirby"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "zordius/lightncandy": "1.2.2",
        "getkirby/cms": "^3.0.0-RC-2.0"
    },
    "conflict": {
        "getkirby/kirby": "<3.0"
    },
    "scripts": {
        "zip": [
            "rm kirby3-handlebars.zip",
            "composer install --no-dev",
            "composer remove getkirby/cms",
            "composer dumpautoload -o",
            "zip -r kirby3-handlebars.zip . -x *.git*",
            "composer require getkirby/cms:'^3.0.0-RC-2.0'"
        ]
    }
}
